#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<ctype.h>

void swap(int *a,int *b){
    int temp=*a;
    *a=*b;
    *b=temp;
}
void heapify(int *a,int n,int i){
    int roi=i,li=2*i+1,ri=2*i+2;
    if(li<n&&a[li]<a[i]){
        swap(&a[li],&a[i]);
        heapify(a,n,li);
    }
    if(ri<n&&a[ri]<a[i]){
        swap(&a[ri],&a[i]);
        heapify(a,n,ri);
    }
}
void min_heapify(int a*,int n){
    for(int i=n/2-1;i>-1;i--){
        heapify(a,n,i);
    }
}
void heap_sort(int a *,int n){
    min_heapify(a,n);
    for(int i=n-1;i>-1;i--){
        swap(&a[0],&a[i]);
        heapify(a,i,0);
    }
}
